[Unit]
Description=Port foward port %I to vip4.ecn.purdue.edu

[Service]
ExecStart=/usr/bin/ssh -nNT -o "ServerAliveInterval 15" -o "ServerAliveCountMax 3" -o "ExitOnForwardFailure yes" -R *:SSHPORT:localhost:22 isoblue2@vip4.ecn.purdue.edu
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
